<p id="notice"><%= notice %></p>

<h1>Listing Reserva</h1>

<table>
  <thead>
    <tr>
      <th>Data inicial</th>
      <th>Cpf</th>
      <th>Numero quarto</th>
      <th>Data final</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reserva.each do |reserva| %>
      <tr>
        <td><%= reserva.data_inicial %></td>
        <td><%= reserva.cpf %></td>
        <td><%= reserva.numero_quarto %></td>
        <td><%= reserva.data_final %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

